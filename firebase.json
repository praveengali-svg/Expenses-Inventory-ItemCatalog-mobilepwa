{
    "hosting": {
        "site": "gen-lang-client-0883796692",
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "predeploy": [
            "npm run build"
        ],
        "rewrites": [
            {
                "source": "/api/extractExpense",
                "run": {
                    "serviceId": "extractexpensedataproxy",
                    "region": "us-central1"
                }
            },
            {
                "source": "/api/extractSales",
                "run": {
                    "serviceId": "extractsalesdataproxy",
                    "region": "us-central1"
                }
            },
            {
                "source": "/api/verifyGst",
                "run": {
                    "serviceId": "verifygstnumberproxy",
                    "region": "us-central1"
                }
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ]
        }
    ]
}